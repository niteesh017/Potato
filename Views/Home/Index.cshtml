@{
    Layout = null;
}

<style>
    body {
        margin: 0;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
        background: radial-gradient(circle at top, #020617, #000);
        overflow: hidden;
    }

    /* Card styling */
    .card {
        background: #fff;
        width: 92%;
        max-width: 450px;
        border-radius: 26px;
        padding: 32px 24px;
        text-align: center;
        box-shadow: 0 30px 70px rgba(0,0,0,0.7);
        animation: pop 0.45s ease;
        position: relative;
    }

    @@keyframes pop {
        from {
            transform: scale(0.9);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    h2 {
        font-size: 1.25rem;
        margin-bottom: 22px;
        color: #111;
    }

    .btns {
        position: relative;
        height: 130px;
    }

    button {
        padding: 14px 36px;
        border-radius: 999px;
        border: none;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 10px 25px rgba(0,0,0,0.35);
        user-select: none;
        transition: transform 0.2s;
    }

        button:active {
            transform: scale(0.95);
        }

    #yes {
        background: linear-gradient(135deg, #22c55e, #16a34a);
        color: #fff;
    }

    #no {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: #fff;
        position: absolute;
        left: 55%;
        top: 0;
    }

    .result {
        display: none;
    }

    /* Result card emojis & text */
    .icon {
        font-size: 3.5rem;
        margin-bottom: 12px;
        animation: bounce 0.6s ease infinite alternate;
    }

    @@keyframes bounce {
        0% {
            transform: translateY(0);
        }

        100% {
            transform: translateY(-12px);
        }
    }

    .sub {
        color: #555;
        font-size: 0.95rem;
        margin-top: 6px;
        line-height: 1.4;
    }

    /* Floating emojis */
    .float {
        position: absolute;
        font-size: 22px;
        animation: floatUp linear infinite;
        opacity: 0.85;
        pointer-events: none;
    }

    @@keyframes floatUp {
        from {
            transform: translateY(100vh) rotate(0deg);
            opacity: 1;
        }

        to {
            transform: translateY(-120vh) rotate(360deg);
            opacity: 0;
        }
    }

    /* Small screens */
    @@media (max-width: 400px) {
        h2 {
            font-size: 1.1rem;
        }

        button {
            font-size: 0.9rem;
            padding: 12px 28px;
        }

        .icon {
            font-size: 3rem;
        }
    }
</style>

